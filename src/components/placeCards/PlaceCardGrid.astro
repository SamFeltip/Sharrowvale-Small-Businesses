---
import H2 from "../elements/headers/H2.astro";
import type { PlaceCard } from "./PlaceCard";
import PlaceCardGridItem from "./PlaceCardGridItem.vue";

type Props = {
    placeCards: PlaceCard[];
    title: string;
};

const { placeCards, title }: Props = Astro.props;
---

<H2 color="coral">
    {title}
</H2>
<div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3">
    {placeCards.map((ap) => <PlaceCardGridItem {...ap} />)}
</div>
