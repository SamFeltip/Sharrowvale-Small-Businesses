---
type Props = {
    classList?: string;
    id?: string;
};

const props: Props = Astro.props;

// Assign default value for props
export const defaultProps: Props = {
    classList: "",
};
---

<div class="w-full flex justify-center">
    <div
        id={props.id}
        class:list={[
            "w-full max-w-screen-xl xl:max-w-screen-2xl px-8 md:px-12 lg:px-16",
            props.classList,
        ]}
    >
        <slot />
    </div>
</div>
