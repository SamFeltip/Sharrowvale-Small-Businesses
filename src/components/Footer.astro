---
const today = new Date();
import { LOGO_URL_DARK } from "../consts";
import ScreenWidth from "./elements/ScreenWidth.vue";
---

<footer class="text-gray-50 bg-gray-800">
    <ScreenWidth>
        <div
            class="flex flex-col md:flex-row md:justify-between pt-[64px] pb-[80px]"
        >
            <div
                class="flex flex-col items-center justify-center text-center gap-2"
            >
                <a href="/" class="flex justify-center">
                    <img src={LOGO_URL_DARK} alt="Sharrow Vale Logo" />
                </a>

                <p class="text-base font-light">All rights reserved</p>
            </div>
            <div
                class="flex flex-col items-center text-center gap-2 md:items-end"
            >
                <div class="flex gap-4 justify-center py-8 md:py-3">
                    <a class="text-base hover:text-coral" href="/"> HOME </a>
                    <a
                        class="text-base hover:text-coral"
                        href="/categories/events"
                    >
                        EVENTS
                    </a>
                    <a class="text-base hover:text-coral" href="/articles">
                        BLOG
                    </a>
                    <a
                        class="text-base hover:text-coral"
                        href="/categories/directory"
                    >
                        DIRECTORY
                    </a>
                    <a class="text-base hover:text-coral" href="/about">JOIN</a>
                </div>

                <div
                    class="flex flex-col items-center md:items-end md:flex-row md:gap-3"
                >
                </div>

                <div
                    class="flex flex-col gap-4 items-center md:items-end md:pt-8"
                >
                    <p class="text-base font-light">
                        <a
                            class="hover:text-coral"
                            href="mailto:info@sharrowvale.co.uk"
                        >
                            info@sharrowvale.co.uk
                        </a>
                    </p>
                    <div class="text-center md:text-end">
                        <p class="text-base font-light">
                            Like this site? <a
                                class="hover:text-coral underline underline-offset-2"
                                href="https://www.design-narrative.com/"
                                >Check out D&n</a
                            >
                        </p>
                        <p class="text-base font-light">
                            Found a mistake? <a
                                class="hover:text-coral underline underline-offset-2"
                                href="https://github.com/SamFeltip/Sharrowvale-Small-Businesses"
                                >Contribute on GitHub</a
                            >
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </ScreenWidth>
</footer>
