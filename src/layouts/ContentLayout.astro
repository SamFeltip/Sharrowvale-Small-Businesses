---
import { describe } from "node:test";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/content/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ScreenWidth from "@/components/elements/ScreenWidth.astro";

type Props = {
    image: ImageMetadata;
    description?: string;
    title: string;
    classList?: string;
    HeaderContent: (_props: any) => JSX.Element;
};

const {description, image, HeaderContent, title, classList }: Props = Astro.props;
---

<html lang="en" class="scroll-smooth">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="font-lato bg-cream" transition:animate="slide">
        <Header image={image} title={title} description={description} Content={HeaderContent} />

        <main>
            <ScreenWidth classList={classList}>
                <slot />
            </ScreenWidth>
        </main>

        <Footer />
    </body>
</html>
