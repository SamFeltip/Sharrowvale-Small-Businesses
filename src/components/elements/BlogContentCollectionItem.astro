---
type Props = {
    position?: "start" | "center" | "end";
};

const { position = "start" } = Astro.props;

const positionClass = `text-${position}`;
---

<section class:list={["empty:hidden", positionClass]}>
    <slot />
</section>

<style>
    section :global(h2) {
        @apply font-merriweather leading-6 text-xl md:text-2xl lg:text-3xl font-light md:font-normal my-2;
    }

    section :global(h3) {
        @apply font-merriweather text-lg mb-2 text-coral;
    }

    section :global(p) {
        @apply text-base font-lato font-light leading-5 no-underline mb-2;
    }

    section :global(#business-content),
    section :global(#article-content) {
        @apply text-coral;
    }
</style>
