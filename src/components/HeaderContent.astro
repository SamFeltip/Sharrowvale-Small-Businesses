---
import H1 from "@/components/elements/headers/H1.astro";
import MonoBody from "@/components/elements/body/MonoBody.astro";
import Section from "@/components/elements/Section.astro";

type Props = {
    title: string;
    description?: string;
};

const { title, description } = Astro.props;
---

<div
    class="flex flex-col justify-center items-center gap-3 text-center p-4 h-full"
    data-pagefind-body
>
    <Section floatIn={true}>
        <H1 color="white" position="center" font="crimson">
            <span data-pagefind-meta="title" data-pagefind-sort="title">
                {title}
            </span>
        </H1>
        {
            description && (
                <MonoBody
                    size="small"
                    data-pagefind-meta="content[data-src]"
                    data-pagefind-body
                >
                    {description}
                </MonoBody>
            )
        }
    </Section>
</div>
