---
import PromotedTags from "@/components/elements/promos/PromotedTags.astro";
import Section from "@/components/elements/Section.astro";
import { getCollection } from "astro:content";

const categories = await getCollection("categories");

const promotedItems = categories.map((category) => ({
    type: "categories",
    collectionEntry: category,
}));
---

<Section floatIn={true}>
    <PromotedTags promotedItems={promotedItems} title="Discover more" />
</Section>
