---
type Props = {
    position?: "start" | "center" | "end";
};

const { position = "start" } = Astro.props;

const positionClass = `text-${position}`;
---

<section class:list={["empty:hidden", positionClass]}>
    <slot />
</section>

<style>
    section :global(h2) {
        @apply capitalize font-merriweather text-coral leading-6 text-center text-xl md:text-2xl lg:text-3xl font-normal;
    }

    section :global(h3) {
        @apply font-merriweather text-lg mb-2;
    }

    section :global(p),
    section :global(td) {
        @apply font-lato font-light leading-6 no-underline mb-3 text-base;
    }

    section :global(p) {
        @apply text-xl;
    }

    section :global(#business-content),
    section :global(#article-content) {
        @apply text-coral;
    }
</style>

<style>
    section {
        display: grid;

        grid-template-areas:
            "open-hours-title"
            "open-hours"
            "business-contact-title"
            "business-contact";

        grid-template-columns: 1fr;
    }
    section :global(p) {
        grid-column: 1/-1;
    }

    section :global(ul) {
        list-style: circle;
        grid-column: 1/-1;
        margin-left: 1.5rem;
    }

    section :global(h2) {
        + table tr :last-child {
            text-align: right;
        }
    }

    section :global(h2#open-hours) {
        grid-area: open-hours-title;
        text-align: center;
    }

    section :global(h2#open-hours + table) {
        grid-area: open-hours;
    }

    section :global(h2#business-contact) {
        grid-area: business-contact-title;
    }

    section :global(h2#business-contact + table) {
        grid-area: business-contact;
    }

    section :global(table) {
        table-layout: auto;
        margin-bottom: 1rem;
    }

    @media screen and (min-width: 768px) {
        section {
            grid-template-areas:
                "open-hours-title . business-contact-title"
                "open-hours spacer business-contact";

            grid-template-columns: 1fr 0.5px 1fr;
            column-gap: 2rem;
        }
    }

    section::before {
        grid-area: spacer;
        content: "";
        height: 100%;
        background-color: black;
        margin-bottom: 1rem;
    }
</style>
