---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/content/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ScreenWidth from "@/components/elements/ScreenWidth.astro";

type Props = {
    image: ImageMetadata;
    description?: string;
    title: string;
    classList?: string;
};

const { image, description, title, classList }: Props = Astro.props;
---

<html lang="en" class="scroll-smooth">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="font-lato bg-cream">
        <Header image={image} , description={description} , title={title} />

        <main>
            <ScreenWidth classList={classList}>
                <slot />
            </ScreenWidth>
        </main>

        <Footer />
    </body>
</html>
