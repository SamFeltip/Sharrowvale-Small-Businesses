---
import ContentLayout from "@/layouts/ContentLayout.astro";

import bannerImage from "../assets/images/index/heroImage.jpg";
import HeaderContent from "@/components/index/Header/HeaderContent.astro";
import CategoryCarousel from "@/components/index/Content/CategoryCarousel.astro";
import InfoForLocals from "@/components/index/Content/InfoForLocals.astro";
import Spotlight from "@/components/index/Content/Spotlight.astro";
import LatestNews from "@/components/index/LatestNews.astro";
import SharrowValeMarket from "@/components/index/Content/SharrowValeMarket.astro";
import ScreenWidth from "@/components/elements/ScreenWidth.vue";
import BusinessCarousel from "@/components/index/Content/BusinessCarousel.astro";
import PromotedCategory from "@/components/index/Content/PromotedCategory.astro";
import NewToTheSite from "@/components/index/Content/NewToTheSite.astro";
---

<ContentLayout
    image={bannerImage}
    imgAlt={"sharrow vale taken by benjamin elliott on unsplash"}
    title="Sharrow vale small businesses"
    description="the place to find independent small businesses in Sharrow Vale, and what's going on in the community"
    HeaderContent={HeaderContent}
    pagefindIgnore={true}
>
    <div class="flex flex-col gap-20 md:gap-40">
        <CategoryCarousel
            title="Independent Businesses"
            promotedCategories={[
                "food-and-drink",
                "art-and-design",
                "cafe",
                "lunch",
                "pubs-and-bars",
                "restaurant",
                "healthcare",
            ]}
        />
        <ScreenWidth classList="flex flex-col gap-20 md:gap-40">
            <InfoForLocals />
            <!-- when we have more content, we can add this component -->
            <NewToTheSite />
            <Spotlight
                title="Business Spotlight"
                slugs={[
                    "dyson-place",
                    "made-in-sheffield",
                    "new-to-the-area",
                    "events",
                ]}
            />
            <LatestNews />
            <SharrowValeMarket />
        </ScreenWidth>
        <BusinessCarousel />
        <PromotedCategory />
    </div>
</ContentLayout>
