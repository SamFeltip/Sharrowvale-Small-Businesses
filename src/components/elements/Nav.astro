---
import HeaderLink from "@/components/HeaderLink.astro";
import { LOGO_URL_DARK } from "@/consts";
import ScreenWidth from "@/components/elements/ScreenWidth.vue";

import { faBars } from "@fortawesome/free-solid-svg-icons/faBars";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";

import BurgerMenu from "@/components/elements/Nav/BurgerMenu.vue";
---

<nav class="w-full">
    <div class="w-full lg:hidden">
        <BurgerMenu logo={LOGO_URL_DARK} client:load />
    </div>

    <ScreenWidth>
        <div class="hidden w-full items-center justify-between pt-8 lg:flex">
            <a href="/">
                <img
                    src={LOGO_URL_DARK}
                    alt="Sharrow Vale Logo"
                    width="160"
                    height="160"
                />
            </a>

            <div class="internal-links flex gap-8 text-white">
                <a
                    href="/tags/sharrow-vale-market"
                    class="mb-0 mt-0 font-lato text-xl font-light">The Market</a
                >
                <a
                    href="/categories/directory"
                    class="mb-0 mt-0 font-lato text-xl font-light">Directory</a
                >
                <a
                    href="/articles"
                    class="mb-0 mt-0 font-lato text-xl font-light"
                    >News & Updates</a
                >
                <a href="/join" class="mb-0 mt-0 font-lato text-xl font-light"
                    >About</a
                >
                <div class="border-b border-white">
                    <form
                        action="/search"
                        method="GET"
                        class="mb-2 flex flex-row items-center gap-2"
                    >
                        <button id="nav-search" class="flex">
                            <svg
                                xmlns="
                            http:
                            www.w3.org
                            2000
                            svg"
                                width="25"
                                height="25"
                                viewBox="0 0 24 24"
                                fill="none"
                                class="ikonik-9adjq"
                            >
                                <path
                                    fill-rule="evenodd"
                                    clip-rule="evenodd"
                                    d="M14.3851 15.4457C11.7348 17.5684 7.85535 17.4013 5.39857 14.9445C2.76253 12.3085 2.76253 8.03464 5.39857 5.3986C8.03461 2.76256 12.3085 2.76256 14.9445 5.3986C17.4013 7.85538 17.5684 11.7348 15.4457 14.3851L20.6013 19.5407C20.8942 19.8336 20.8942 20.3085 20.6013 20.6014C20.3085 20.8943 19.8336 20.8943 19.5407 20.6014L14.3851 15.4457ZM6.45923 13.8839C4.40898 11.8336 4.40898 8.50951 6.45923 6.45926C8.50948 4.40901 11.8336 4.40901 13.8839 6.45926C15.9326 8.50801 15.9341 11.8287 13.8884 13.8794C13.8868 13.8809 13.8853 13.8823 13.8838 13.8839C13.8823 13.8854 13.8808 13.8869 13.8793 13.8884C11.8287 15.9341 8.50798 15.9326 6.45923 13.8839Z"
                                    fill="currentColor"
                                    class="path-1b5n5"></path>
                            </svg>
                        </button>
                        <input
                            id="nav-search"
                            name="search"
                            type="text"
                            class="bg-transparent text-xl font-light text-white placeholder-white focus:outline-none"
                            placeholder="Search"
                        />
                    </form>
                </div>
            </div>
        </div>
    </ScreenWidth>
</nav>
