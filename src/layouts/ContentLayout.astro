---
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/content/Header.astro";
import Footer from "../components/Footer.astro";
import { LOGO_URL, LOGO_URL_DARK } from "@/consts";

import defaultBannerImage from "@/assets/images/index/home/guest-road.jpg";
import type { NavigationLink } from "@/components/elements/Nav/ClaudeNav.vue";
import ClaudeNav from "@/components/elements/Nav/ClaudeNav.vue";

type Props = {
    pagefindIgnore?: boolean;
    image?: ImageMetadata;
    imgAlt?: string;
    description?: string;
    title: string;
    classList?: string;
    headerTop?: string[];
    headerBottom?: string[];
    breadcrumbs?: NavigationLink[];
    HeaderContent?: (_props: any) => JSX.Element;
    Metadata?: {
        image: ImageMetadata;
        title: string;
        description: string;
    };
};

const {
    pagefindIgnore,
    image = defaultBannerImage,
    imgAlt,
    description,
    HeaderContent,
    title,
    headerTop,
    headerBottom,
    breadcrumbs = [],
    Metadata,
}: Props = Astro.props;

const metaData = Metadata ?? {
    image: image,
    title: title,
    description: description,
};
---

<html lang="en" class="scroll-smooth">
    <head>
        <BaseHead {...metaData} />
    </head>
    <body
        class="flex min-h-screen flex-col bg-cream font-lato"
        data-pagefind-ignore={pagefindIgnore}
    >
        {
            HeaderContent && (
                <Header
                    image={image}
                    imgAlt={imgAlt}
                    title={title}
                    headerTop={headerTop}
                    headerBottom={headerBottom}
                    Content={HeaderContent}
                    breadcrumbs={breadcrumbs}
                />
            )
        }

        {
            HeaderContent === undefined && (
                <div class="">
                    <ClaudeNav
                        client:load
                        lightLogo={LOGO_URL}
                        darkLogo={LOGO_URL_DARK}
                        lightMode={true}
                        breadcrumbs={breadcrumbs}
                    />
                </div>
            )
        }

        <main class="flex flex-1 flex-col pb-20 pt-8 md:pt-16">
            <slot />
        </main>

        <Footer />
    </body>
</html>
