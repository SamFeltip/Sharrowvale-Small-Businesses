---
import HoverArticle from "../elements/articles/HoverArticle.vue"; // Keep Vue import
import Button from "../elements/Button.vue";
import H2 from "../elements/headers/H2.astro";
import type { PlaceCard } from "./PlaceCard";

type Props = {
    item: PlaceCard;
    callToAction: string;
};

const { item, callToAction } = Astro.props;

const { image, title, content, tags, href } = item;
---

<article>
    <div class="flex flex-col md:flex-row items-center gap-4">
        {
            image && (
                <img
                    src={image}
                    alt={title}
                    class="w-full md:max-w-[400px] object-cover rounded-lg"
                />
            )
        }

        <div class="w-full flex flex-col items-start gap-4 p-4">
            <H2 color="coral">{title}</H2>
            {content && <p>{content}</p>}
            <slot />
            <Button href={href}>
                {callToAction}
            </Button>
        </div>
    </div>
</article>
