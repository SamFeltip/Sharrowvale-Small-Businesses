---
import { type CollectionEntry, getCollection } from "astro:content";
import ContentLayout from "@/layouts/ContentLayout.astro";

const promotions: CollectionEntry<"promotion">[] =
    await getCollection("promotion");

import bannerImage from "../assets/images/index/heroImage.jpg";
import HeaderContent from "@/components/index/Header/HeaderContent.astro";
import DirectoryCarousel from "@/components/index/Content/DirectoryCarousel.astro";
import InfoForLocals from "@/components/index/Content/InfoForLocals.astro";

---

<ContentLayout
image={bannerImage}
title="Promotions" description="Promotions" HeaderContent={HeaderContent}>
    <div data-pagefind-ignore>
        <DirectoryCarousel/>
        <InfoForLocals/>
    </div>
</Layout>
