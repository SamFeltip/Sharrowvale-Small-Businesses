---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/content/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

import defaultBannerImage from "@/assets/images/index/home/guest-road.jpg";

type Props = {
    pagefindIgnore?: boolean;
    image?: ImageMetadata;
    description?: string;
    title: string;
    classList?: string;
    HeaderContent: (_props: any) => JSX.Element;
};

const {
    pagefindIgnore,
    description,
    image = defaultBannerImage,
    HeaderContent,
    title,
    classList,
}: Props = Astro.props;
---

<html lang="en" class="scroll-smooth">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="font-lato bg-cream" data-pagefind-ignore={pagefindIgnore}>
        <Header
            image={image}
            title={title}
            description={description}
            Content={HeaderContent}
        />

        <main class="py-8 md:py-14">
            <slot />
        </main>

        <Footer />
    </body>
</html>
