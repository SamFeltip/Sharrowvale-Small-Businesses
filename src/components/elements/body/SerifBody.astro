---
type Props = {
    classList?: string;
    position: "center" | "start" | "end";
    color?: "white" | "coral" | "black";
    id?: string;
};

const props: Props = Astro.props;

// Assign default value for props
export const defaultProps: Props = {
    color: "black",
    position: "start",
};
---

<p
    id={props.id}
    class:list={[
        "font-merriweather text-base font-light no-underline lg:text-lg xl:text-xl",
        `text-${props.color}`,
        `text-${props.position}`,
        props.classList,
    ]}
>
    <slot />
</p>
